<configuration>
	<!-- 指定hdfs的nameservice为ctns-->
	<property>
		<name>fs.defaultFS</name>
		<value>hdfs://standalone:9000</value>
	</property>
	<!--指定hadoop数据临时存放目录-->
	<property>
		<name>hadoop.tmp.dir</name>
		<value>file:/opt/hadoop-2.6.0-cdh5.16.1/tmp</value>
	</property>
	
	<property>
		<name>io.file.buffer.size</name>
		<value>4096</value>
	</property>

</configuration>