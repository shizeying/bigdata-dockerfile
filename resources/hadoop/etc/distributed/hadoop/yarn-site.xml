<configuration>
	<property>
		<name>yarn.resourcemanager.connect.retry-interval.ms</name>
		<value>2000</value>
	</property>
	<!-- 超时的周期 -->
	<property>
		<name>yarn.resourcemanager.ha.enabled</name>
		<value>true</value>
	</property>
	<!-- 打开高可用 -->
	<property>
		<name>yarn.resourcemanager.ha.automatic-failover.enabled</name>
		<value>true</value>
	</property>
	<!-- 启动故障自动恢复 -->
	<property>
		<name>yarn.resourcemanager.ha.automatic-failover.embedded</name>
		<value>true</value>
	</property>
	<property>
		<name>yarn.resourcemanager.cluster-id</name>
		<value>yarn-rm-cluster</value>
	</property>
	<!-- 给yarn cluster 取个名字yarn-rm-cluster -->
	<property>
		<name>yarn.resourcemanager.ha.rm-ids</name>
		<value>rm1,rm2</value>
	</property>
	<!-- 给ResourceManager 取个名字 rm1,rm2 -->
	<property>
		<name>yarn.resourcemanager.hostname.rm1</name>
		<value>bigdata-master</value>
	</property>
	<!-- 配置ResourceManager rm1 hostname -->
	<property>
		<name>yarn.resourcemanager.hostname.rm2</name>
		<value>bigdata-slave1</value>
	</property>
	<!-- 配置ResourceManager rm2 hostname -->
	<property>
		<name>yarn.resourcemanager.recovery.enabled</name>
		<value>true</value>
	</property>
	<!-- 启用resourcemanager 自动恢复 -->
	<property>
		<name>yarn.resourcemanager.zk.state-store.address</name>
		<value>bigdata-master:2181,bigdata-slave1:2181,bigdata-slave2:2181,bigdata-slave3:2181,bigdata-slave4:2181</value>
	</property>
	<!-- 配置Zookeeper地址 -->
	<property>
		<name>yarn.resourcemanager.zk-address</name>
		<value>bigdata-master:2181,bigdata-slave1:2181,bigdata-slave2:2181,bigdata-slave3:2181,bigdata-slave4:2181</value>
	
	</property>
	<!-- 配置Zookeeper地址 -->
	<property>
		<name>yarn.resourcemanager.address.rm1</name>
		<value>bigdata-master:8032</value>
	</property>
	<!--  rm1端口号 -->
	<property>
		<name>yarn.resourcemanager.scheduler.address.rm1</name>
		<value>bigdata-master:8034</value>
	</property>
	<!-- rm1调度器的端口号 -->
	<property>
		<name>yarn.resourcemanager.webapp.address.rm1</name>
		<value>bigdata-master:8088</value>
	</property>
	<!-- rm1 webapp端口号 -->
	<property>
		<name>yarn.resourcemanager.address.rm2</name>
		<value>bigdata-slave1:8032</value>
	</property>
	<!-- rm2端口号 -->
	<property>
		<name>yarn.resourcemanager.scheduler.address.rm2</name>
		<value>bigdata-slave1:8034</value>
	</property>
	<!-- rm2调度器的端口号 -->
	<property>
		<name>yarn.resourcemanager.webapp.address.rm2</name>
		<value>bigdata-slave1:8088</value>
	</property>
	<!-- rm2 webapp端口号 -->
	<property>
		<name>yarn.nodemanager.aux-services</name>
		<value>mapreduce_shuffle</value>
	</property>
	<property>
		<name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
		<value>org.apache.hadoop.mapred.ShuffleHandler</value>
	</property>
	<!-- 执行MapReduce需要配置的shuffle过程 -->
	
	<property>
		<name>yarn.resourcemanager.am.max-attempts</name>
		<value>4</value>
		<description>
			The maximum number of application master execution attempts.
		</description>
	</property>
</configuration>